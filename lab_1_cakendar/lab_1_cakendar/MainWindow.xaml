<Window x:Class="lab_1_cakendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_1_cakendar"
        mc:Ignorable="d"
        Title="Calendar" Height="600" Width="600">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Button Content="&lt;" Width="30" Click="PreviousMonth_Click"/>
            <TextBlock Name="MonthYearLabel" FontSize="16" FontWeight="Bold" Margin="10" VerticalAlignment="Center"/>
            <Button Content="&gt;" Width="30" Click="NextMonth_Click"/>
        </StackPanel>

        <Grid Name="CalendarGrid" Margin="10,50,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <UniformGrid Grid.Row="0" Columns="7" Background="#F0F0F0">
                <TextBlock Text="Пн" FontSize="14" FontWeight="Bold" TextAlignment="Center" Padding="5"/>
                <TextBlock Text="Вт" FontSize="14" FontWeight="Bold" TextAlignment="Center" Padding="5"/>
                <TextBlock Text="Ср" FontSize="14" FontWeight="Bold" TextAlignment="Center" Padding="5"/>
                <TextBlock Text="Чт" FontSize="14" FontWeight="Bold" TextAlignment="Center" Padding="5"/>
                <TextBlock Text="Пт" FontSize="14" FontWeight="Bold" TextAlignment="Center" Padding="5"/>
                <TextBlock Text="Сб" FontSize="14" FontWeight="Bold" Foreground="Red" TextAlignment="Center" Padding="5"/>
                <TextBlock Text="Вс" FontSize="14" FontWeight="Bold" Foreground="Red" TextAlignment="Center" Padding="5"/>
            </UniformGrid>

            <UniformGrid Grid.Row="1" Columns="7" Name="DaysGrid"/>
        </Grid>
    </Grid>
</Window>
